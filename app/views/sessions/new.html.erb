<%# <h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| 
  <div>
    <%= f.label :email, "メールアドレス" <br>
    <%= f.email_field :email 
  </div>

  <div>
    <%= f.label :password, "パスワード" <br>
    <%= f.password_field :password 
  </div>

  <%= f.submit "ログイン" 
<% end %> 

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">ログイン</h1>

    <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-input", placeholder: "example@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-input", placeholder: "********" %>
      </div>

      <%= f.submit "ログイン", class: "auth-button" %>
    <% end %>

    <p class="auth-link">
      アカウントをお持ちでない方は
      <%= link_to "新規登録", new_user_path %>
    </p>
  </div>
</div>