<%# app/views/rooms/new.html.erb %>
 <h1>施設登録</h1>

<%= form_with model: @room, local: true, multipart: true do |f| %>
  <div>
    <%= f.label :name, "施設名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "施設詳細" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price, "料金" %><br>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :image, "施設画像" %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "キャンセル", request.referer || rooms_path, class: "btn btn-secondary" %>
  </div>
<% end %>