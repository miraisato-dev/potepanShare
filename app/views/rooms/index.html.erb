<h1>部屋一覧</h1>


<%= link_to "新規作成", new_room_path, class: "btn btn-primary" %>


<ul>
 <% @rooms.each do |room| %>
   <li class="room-card">
     <!-- default.img挿入 -->
     <% if room.image.attached? %>
       <%= image_tag room.image, class: "room-image" %>
     <% else %>
       <%= image_tag "default_room.png", class: "room-image" %>
     <% end %>


     <div>
       <%= link_to room.name, room_path(room) %><br>
       <%= number_to_currency(room.price) %>
     </div>
   </li>
 <% end %>
</ul>
