<%# app/views/users/edit.html.erb %>
<%= render 'settings_layout' do %>
  <h2>アカウント</h2>

  <%= form_with model: @user, url: users_path, method: :patch do |f| %>

    <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password, '変更後パスワード' %>
      <%= f.password_field :password, placeholder: '変更する場合のみ入力' %>
    </div>

    <div>
      <%= f.label :password_confirmation, '確認用パスワード' %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.label :current_password, '現在のパスワード' %>
      <%= f.password_field :current_password %>
    </div>

    <%= f.submit '保存' %>
  <% end %>
<% end %>
