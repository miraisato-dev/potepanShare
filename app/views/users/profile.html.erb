<%# app/views/users/my_page.html.erb %>
  <%= render "settings_layout" do %>
    <h2>プロフィール</h2>

    <!-- 編集ボタン -->
    <div class="profile-actions">
      <%= link_to "編集", edit_profile_path, class: "btn-edit" %>
    </div>

    <!-- アイコン -->
    <div class="profile-row">
      <span class="label">アイコン画像</span>
      <div class="value">
        <%= image_tag "default_user.png", class: "user-avatar" %>
      </div>
    </div>

    <!-- 名前 -->
    <div class="profile-row">
      <span class="label">名前</span>
      <span class="value"><%= @user.name %></span>
    </div>

    <!-- 自己紹介 -->
    <div class="profile-row">
      <span class="label">自己紹介</span>
      <p class="value">
        <%= @user.bio.presence || "" %>
      </p>
    </div>
  <% end %>
