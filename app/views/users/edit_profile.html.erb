<!-- app/views/users/edit_profile.html.erb -->
<%= render 'settings_layout' do %>
  <%# プロフィール編集 %>
  <h2>プロフィール</h2>

  <%= form_with model: @user, url: profile_path, local: true do |f| %>
    <div>
      <%= f.label :avatar, "アイコン画像" %>
      <%= f.file_field :avatar %>
    </div>

    <div>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :bio, "自己紹介" %>
      <%= f.text_area :bio %>
    </div>

    <%= f.submit "更新", class: "auth-button" %>
  <% end %>
<% end %>
