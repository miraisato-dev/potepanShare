<%# app/views/users/new.html.erb %>
<% content_for :title, "新規登録 | Potepan Share" %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">新規登録</h1>

    <% if @user.errors.any? %>
      <div class="form-errors">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: users_path, local: true, class: "auth-form" do |f| %>

      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-input", placeholder: "山田 太郎" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-input", placeholder: "example@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-input", placeholder: "8文字以上" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <%= f.submit "登録する", class: "auth-button" %>
    <% end %>

    <p class="auth-link">
      すでにアカウントをお持ちですか？
      <span class="link_to"><%= link_to "ログイン", login_path %></div>
    </p>
  </div>
</div>
