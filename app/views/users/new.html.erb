<%# app/views/users/new.html.erb %>
<% content_for :title, "新規登録 | Potepan Share" %>

  <div class="form-page">
    <h1>新規登録</h1>

    <div class="form">
    
    <% if @user.errors.any? %>
      <div class="form-errors">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: users_path, local: true do |f| %>

      <div class="form-group">
        <%= f.label :name, "名前", class: "form-label form_label--required" %>
        <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名を入力" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label form_label--required" %>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label form_label--required" %>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード", class: "form-label form_label--required" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "確認用パスワードを入力" %>
      </div>

      <div class="form-actions d-flex">
        <%= f.submit "新しいアカウントを作成", class: "form-btn form-btn--primary" %>
        <%= link_to "アカウントをお持ちの方はログイン", login_path, class: "form-btn form-btn--secondary" %>
      </div>
    </div>
  </div>
<% end %>